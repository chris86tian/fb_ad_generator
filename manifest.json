{
  "manifest_version": 3,
  "name": "FB Ad Generator",
  "description": "Generate and copy Facebook Ad texts using ChatGPT.",
  "version": "1.2",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/adsmanager/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
